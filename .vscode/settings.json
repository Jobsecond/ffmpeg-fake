{
    "cmake.generator": "Ninja",
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "clangd.arguments": [
        "--header-insertion=never",
        "--function-arg-placeholders=false",
        "--clang-tidy"
    ],
    "editor.gotoLocation.alternativeDefinitionCommand": "editor.action.revealDeclaration",
    "cmake.configureSettings": {
        "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/build/install",
        "CMAKE_INSTALL_BINDIR": "${workspaceFolder}/build/install/bin",
        "CMAKE_INSTALL_LIBDIR": "${workspaceFolder}/build/install/lib",
        "CMAKE_INSTALL_INCLUDEDIR": "${workspaceFolder}/build/install/include",
    }
}